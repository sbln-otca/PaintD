<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="PaintD.MainWindow"
        Title="PaintD">

    <DockPanel>
        <StackPanel DockPanel.Dock="Top" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right"
                    Margin="5">
            <Button Name="RedButton" Background="Red" Content="R" Click="Red_Click" Margin="2"></Button>
            <Button Name="BlueButton" Background="Blue" Content="B" Click="Blue_Click" Margin="2"></Button>
            <Button Name="YellowButton" Background="Yellow" Content="Y" Click="Yellow_Click" Margin="2"></Button>
            <Button Name="BlackButton" Background="Black" Content="B" Click="Black_Click" Margin="2"></Button>
        </StackPanel>
        
        <Canvas Name="DrawingCanvas" 
                Background="White"
                PointerPressed="DrawingCanvas_PointerPressed"
                PointerMoved="DrawingCanvas_PointerMoved"
                PointerReleased="DrawingCanvas_PointerReleased">
        </Canvas>
    </DockPanel>
</Window>
